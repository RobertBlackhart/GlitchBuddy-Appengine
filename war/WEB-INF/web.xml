<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>HelloWorld</servlet-name>
		<servlet-class>com.mcdermotsoft.glitchenjournal.HelloWorld</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetDeals</servlet-name>
		<servlet-class>com.mcdermotsoft.glitchenjournal.GetDeals</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AuctionSearch</servlet-name>
		<servlet-class>com.mcdermotsoft.glitchenjournal.AuctionSearch</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AverageSearch</servlet-name>
		<servlet-class>com.mcdermotsoft.glitchenjournal.AverageSearch</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PlayerSearch</servlet-name>
		<servlet-class>com.mcdermotsoft.glitchenjournal.PlayerSearch</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DatabaseUpdate</servlet-name>
		<servlet-class>com.mcdermotsoft.glitchenjournal.DatabaseUpdate</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DatabaseTask</servlet-name>
		<servlet-class>com.mcdermotsoft.glitchenjournal.DatabaseTask</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DatabaseReset</servlet-name>
		<servlet-class>com.mcdermotsoft.glitchenjournal.DatabaseReset</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetImageTask</servlet-name>
		<servlet-class>com.mcdermotsoft.glitchenjournal.GetImageTask</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetIcon</servlet-name>
		<servlet-class>com.mcdermotsoft.glitchenjournal.GetIcon</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloWorld</servlet-name>
		<url-pattern>/helloworld</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetDeals</servlet-name>
		<url-pattern>/getdeals</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AuctionSearch</servlet-name>
		<url-pattern>/auctionsearch</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AverageSearch</servlet-name>
		<url-pattern>/averagesearch</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PlayerSearch</servlet-name>
		<url-pattern>/playersearch</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DatabaseUpdate</servlet-name>
		<url-pattern>/cron/databaseupdate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DatabaseTask</servlet-name>
		<url-pattern>/cron/databasetask</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DatabaseReset</servlet-name>
		<url-pattern>/databasereset</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetImageTask</servlet-name>
		<url-pattern>/task/getimagetask</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetIcon</servlet-name>
		<url-pattern>/geticon</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<security-constraint>
        <web-resource-collection>
        	<web-resource-name>MySecureUrls</web-resource-name>
            <url-pattern>/cron/*</url-pattern>
            <url-pattern>/task/*</url-pattern>
            <url-pattern>/databasereset</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
